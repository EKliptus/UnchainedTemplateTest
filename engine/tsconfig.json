{
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".meteor", "api"]
}
